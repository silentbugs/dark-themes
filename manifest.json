{
 	"manifest_version": 2,
 	"name": "Dark Themes",
 	"version": "1.0",
	"description": "Switch to dark version of several websites",
	"icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
	},
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        // jira
        "https://*.atlassian.net/*",
        // bitbucket
        "https://*.bitbucket.org/*",
        "https://bitbucket.org/*",
        // github
        "https://*.github.com/*",
        "https://github.com/*",
        // stackoverflow
        "https://*.stackoverflow.com/*",
        "https://stackoverflow.com/*",
        "https://*.serverfault.com/*",
        "https://serverfault.com/*",
        "https://*.stackexchange.com/*",
        "https://stackexchange.com/*",
        // archlinux / wiki
        "https://*.archlinux.org/*",
        "https://archlinux.org/*",
        // wikipedia
        "https://*.wikipedia.org/*",
        "https://wikipedia.org/*",
        // google
        "https://*.google.com/*",
        "https://google.com/*"
      ],
      "exclude_matches": [
        "https://*.atlassian.net/wiki/*",
        // google maps
        "https://google.com/maps/*",
        "https://maps.google.com/*",
        "https://*.google.com/maps/*",
        // google photos
        "https://photos.google.com/*"
      ],
      "css": [
        "dist/main.css"
      ]
    }
  ]
}
